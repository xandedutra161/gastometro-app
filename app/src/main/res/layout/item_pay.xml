<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:id="@+id/itemPay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvCategoryNameItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="16dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="@color/fontColor"
            android:layout_toEndOf="@+id/checkBox"
            android:text="Alimentação"
            android:textSize="14sp"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baguncinha Xandão"
            android:layout_alignParentTop="true"
            android:layout_marginTop="24dp"
            android:layout_marginStart="12dp"
            android:textColor="@color/text_weak"
            android:layout_toEndOf="@+id/checkBox"
            android:textAppearance="@style/CustomTextAppearance"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="48dp"
            android:paddingTop="8dp"
            android:text="+R$ 500,00"
            android:textSize="15sp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="@color/green" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDateExpiration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="48dp"
            android:paddingTop="8dp"
            android:text="29/03/2023"
            android:textSize="14sp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="@color/text_weak" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvParcelCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            tools:text="9/9"
            android:textSize="12sp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="@color/text_weak" />

    </RelativeLayout>


</LinearLayout>